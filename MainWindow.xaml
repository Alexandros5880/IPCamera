<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPCamera"
        xmlns:WPF="clr-namespace:VisioForge.Controls.UI.WPF;assembly=VisioForge.Controls.UI" x:Class="IPCamera.MainWindow"
        mc:Ignorable="d"
        Title="IPCameras"
        xmlns:tools="IPCamera.Tools" xmlns:tools1="clr-namespace:IPCamera.Tools"
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools1:RatioConverter}, ConverterParameter='0.97' }"
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools1:RatioConverter}, ConverterParameter='1' }"
        AutomationProperties.Name="IPCameras"
        WindowStartupLocation="CenterScreen">
    <!-- Icon="icon.ico"-->

    <ScrollViewer HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <!-- Camera Viewers -->
            <WPF:VideoCapture HorizontalAlignment="Left" Height="852" Margin="40,29,0,0" VerticalAlignment="Top" Width="883" AutomationProperties.Name="IPCameraFrame" x:Name="IPCameraFrame_1" Background="#FF5B5B5B"/>
            <WPF:VideoCapture x:Name="IPCameraFrame_2" HorizontalAlignment="Left" Margin="958,29,0,88" Width="914" Grid.ColumnSpan="2" Background="#FF5B5B5B"/>
            <!-- Buttons Label -->
            <StackPanel HorizontalAlignment="Left" Height="25" Margin="861,943,0,0" VerticalAlignment="Top" Width="155" Orientation="Horizontal" >
                <Button Content="Start" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" AutomationProperties.Name="btStart1" Click="Button_Click" Padding="3"/>
                <GridSplitter HorizontalAlignment="Stretch" Width="7"/>
                <Button Content="Stop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" AutomationProperties.Name="btStop1" Click="Button_Click_1" Padding="3"/>
            </StackPanel>
            <Button Content="Setings" Grid.Column="1" HorizontalAlignment="Left" Width="74" Margin="690,943,-75,0" VerticalAlignment="Top" Padding="3" Click="Button_Click_2"/>
        </Grid>
    </ScrollViewer>

</Window>
