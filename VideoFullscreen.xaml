<Window x:Class="IPCamera.VideoFullscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IPCamera"
        mc:Ignorable="d"
        Title="VideoFullscreen"
        Background="Black"
        WindowState="Maximized">
    
    <Grid x:Name="main_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="title" Foreground="#FFC9C9C9" FontSize="17" Margin="33,0,0,0"/>
            <Label Grid.Column="1" x:Name="time" Foreground="#990000" Margin="33,0,0,0"
                   FontSize="20" FontFamily="Century Gothic" FontStretch="UltraExpanded"/>
        </Grid>
    </Grid>
</Window>
